{
  "name": "ew-market-lib",
  "version": "1.0.0",
  "description": "",
  "main": "dist/js/src/index.js",
  "types": "dist/js/src/index.d.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start-test-backend": "node node_modules/ew-utils-testbackend/index.js",
    "test": "npm run build && mocha dist/js/src/test/ --timeout 60000",
    "start-ganache": "ganache-cli -m 'chalk park staff buzz chair purchase wise oak receive avoid avoid home' -g 0 -l 80000000 -e 1000000 -a 20",
    "testlight": "npm run build-ts && mocha build/ts/test/",
    "debug-light-test": "npm run build-ts && mocha --inspect-brk build/ts/test/",
    "setup-SS": "npm run build-ts && node build/ts/utils/deployment/secretStore",
    "build-and-deploy": "npm run build && npm run deploy-contracts",
    "deploy-contracts": "node build/ts/utils/deployment/startMigrate",
    "build": "npm run build-schemas && npm run build-ts",
    "precompile-contracts": "rm -rf build/contracts",
    "compile-contracts": "node build/ts/utils/deployment/compile",
    "prebuild-ts": "rm -rf build/ts",
    "build-ts": "rm -rf dist/js && node_modules/typescript/bin/tsc",
    "prebuild-schemas": "rm -rf dist/schemas && mkdir -p dist/schemas && rm -rf schemas && mkdir schemas",
    "build-schemas": "npm run build-schema:AgreementPropertiesOffChain && npm run build-schema:MatcherPropertiesOffChain && cp -R schemas dist/schemas",
    "build-schema:AgreementPropertiesOffChain": "typescript-json-schema --ignoreErrors --required src/blockchain-facade/Agreement.ts AgreementOffChainProperties > schemas/AgreementOffChainProperties.schema.json",
    "build-schema:MatcherPropertiesOffChain": "typescript-json-schema --ignoreErrors --required src/blockchain-facade/Agreement.ts MatcherOffchainProperties > schemas/MatcherOffchainProperties.schema.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/energywebfoundation/ew-market-lib.git"
  },
  "author": "slock.it GmbH; Martin Kuechler, martin.kuechler@slock.it; Heiko Burkhardt, heiko.burkhardt@slock.it",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/energywebfoundation/ew-market-lib/issues"
  },
  "homepage": "https://github.com/energywebfoundation/ew-market-lib#readme",
  "dependencies": {
    "ew-asset-registry-contracts": "0.0.99",
    "ew-asset-registry-lib": "0.0.99",
    "ew-market-contracts": "0.0.99",
    "ew-user-registry-contracts": "0.0.99",
    "ew-utils-general-lib": "0.0.100",
    "ew-utils-testbackend": "v0.0.99",
    "web3": "1.0.0-beta.37",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.6.28",
    "@types/web3": "1.0.14",
    "chai": "^4.1.2",
    "ganache-cli": "^6.1.8",
    "mocha": "^5.2.0",
    "typescript": "^2.9.2",
    "typescript-json-schema": "^0.31.0"
  },
  "postinstall": "rm -f node_modules/web3/index.d.ts"
}